<% provide(:title, 'Contact us') %>

<h1>Get in Touch</h1>
<h3>If you have any questions or comments, please use the form below and we will get back to you as soon as possible.</h3>

<div class="row" id="rowspacer">
  <div class="col-lg-5">

    <%= form_tag dispatch_email_path, method: :post do %>

        <div class="form-group">
            <%= label_tag "user_info[name]", "Name" %>
            <%= text_field_tag "user_info[name]", :class => "form-control", :placeholder => "Enter name" %>
        </div>
        <div class="form-group">
          <%= label_tag "user_info[email]", "Email" %>
          <%= text_field_tag "user_info[email]", :class => "form-control", :placeholder => "Enter email" %>
        </div>
        <div class="form-group">
          <%= label_tag "user_info[message]", "Message" %>
          <%= text_area_tag "user_info[message]", :class => "form-control", :placeholder => "" %>
        </div>
        <%= submit_tag "Send", class: "btn btn-large btn-success" %>
    <% end %>

  </div>
</div>