<% provide(:title, "Edit user") %>

<div class="row well" id="rowspacer" style="margin-top: -70px">
  <div class="col-md-5">
    <%= render 'shared/error_messages' %>
    <h1>Update profile</h1>
    <%= form_for(@user) do |f| %>
    <div class="form-group">
     <%= f.label :status %>
    <%= select(:user, :status, [['active', 'active'], ['standby', 'standby'], ['not active', 'not active'] ], :class => "form-control") %>
    </div>
  </div>
</div>

  <div class="row well" id="rowspacer">
    <div class="col-md-5">
        <div class="form-group">
        <%= f.label :name %>
          <%= f.text_field :name, :class => "form-control", :placeholder => "Enter name" %>
        </div>
        <div class="form-group">
        <%= f.label :email %>
          <%= f.text_field :email, :class => "form-control", :placeholder => "Enter email" %>
        </div>
        <div class="form-group">
        <%= f.label :password %>
          <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
        </div>
        <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Retype password" %>
        </div>

        <div class="form-group">
          <%= f.label "Profile Photo" %>
          <%= f.file_field :avatar %>
        </div>

  </div>
  <div class="col-md-5">
        <div class="form-group">
          <%= f.label :phone %>
          <%= f.text_field :phone, :class => "form-control", :placeholder => "Enter phone" %>
        </div>
        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, :class => "form-control", :placeholder => "Enter address" %>
        </div>
        <div class="form-group">
          <%= f.label :zipcode %>
          <%= f.text_field :zipcode, :class => "form-control", :placeholder => "Enter zip code" %>
        </div>
        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city, :class => "form-control", :placeholder => "Enter city" %>
        </div>
        <div class="form-group">
          <%= f.label :state %>
          <%= f.text_field :state, :class => "form-control", :placeholder => "Enter state" %>
        </div>

        <div class="form-group">
          <%= f.label :country %>
          <%= f.text_field :country, :class => "form-control", :placeholder => "Enter country" %>
        </div>
  </div>
</div>

<div class="row well" id="rowspacer">
  <div class="col-md-5">
    <div class="form-group">
      <%= f.label :skype %>
      <%= f.text_field :skype, :class => "form-control", :placeholder => "Skype name" %>
    </div>
    <div class="form-group">
      <%= f.label :creative_platform_profile %>
      <%= f.text_field :creative_platform_profile, :class => "form-control", :placeholder => "i.e. Deviantart, Behance" %>
    </div>
    <div class="form-group">
      <%= f.label :website %>
      <%= f.text_field :website, :class => "form-control", :placeholder => "Private website" %>
    </div>
      <br>
      <%= f.submit "Save changes", class: "btn btn-large btn-success" %>
        <% end %>
  </div>
</div>
