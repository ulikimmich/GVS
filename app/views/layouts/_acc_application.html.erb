<div class="row well" xmlns="http://www.w3.org/1999/html">
  <div class="col-sm-8 col-md-8">
  <% if current_user.admin? %>
    <h1>
      <%
         status = @acc_application.status
         case status
           when "new"
      %>
          <h1 style="background-color: #5165E8; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">New</h1>
      <% when "phase 2" %>
          <h1 style="background-color: #00e3ff; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Phase 2</h1>
      <% when "in review" %>
          <h1 style="background-color: #ff08d2; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">In Review</h1>
      <% when "consider" %>
          <h1 style="background-color: #FF6A19; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Consider</h1>
      <% when "recommend" %>
          <h1 style="background-color: #00f709; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Recommend</h1>
      <% when "pass" %>
          <h1 style="background-color: #e9e005; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Pass</h1>
      <% when "incomplete" %>
          <h1 style="background-color: #DE1D10; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Incomplete</h1>
      <% end %>
    </h1>
  <% end %>

    <h2><%= @acc_application.appform_field_1 %><br><small>Last updated on: <%= @acc_application.updated_at.to_formatted_s(:long) %></small></h2><br>
    <h3>Applicant Basic Info & Background</h3>
    <p><strong><%= QUESTION_ONE %></strong><br>
      <%= @acc_application.appform_field_1 %></p>
    <p><strong><%= QUESTION_TWO %></strong><br>
      <%= @acc_application.appform_field_2 %></p>
    <p><strong><%= QUESTION_THREE %></strong><br>
      <%= @acc_application.appform_field_3 %></p>
    <p><strong><%= QUESTION_FOUR %></strong><br>
<!--
      <%= @acc_application.appform_field_4 %></p><br>
-->

    <% @acc_application.founders.each do | f |   %>

        <div class="tableborder">
          <table>
            <tr>
              <td><strong>First name</strong></td><td><%= f.firstname %><span style="padding-left: 10px"></span></td>
              <td><strong>Last name</strong></td><td><%= f.lastname %><span style="padding-left: 10px"></span></td>
              <td><strong>Email</strong></td><td><%= f.email %></td><br>
            </tr>
            <tr>
              <td><strong>Address</strong></td> <td><%= f.address %><span style="padding-left: 10px"></span></td>
              <td><strong>City</strong></td> <td><%= f.city %><span style="padding-left: 10px"></span></td>
              <td><strong>State</strong></td> <td><%= f.state %><span style="padding-left: 10px"></span>
              <strong>Zip</strong><%= f.zipcode %><span style="padding-left: 10px"></span></td><br>
            </tr>
            <tr>
              <td><strong>Phone</strong></td> <td><%= f.phone %><span style="padding-left: 10px"></span></td>
              <td><strong>Date of birth</strong></td> <td><%= f.dateofbirth %><span style="padding-left: 10px"></span></td>
              <td><strong>Website</strong></td> <td><%= f.website %><span style="padding-left: 10px"></span></td><br>
            <tr>
              <td><strong>Company role</strong></td> <td><%= f.companyrole %><span style="padding-left: 10px"></span></td>
              <td></td>
              <td></td>
            </tr>
          </table>
          <strong>Education</strong><span style="padding-left: 19px"></span><%= f.education %><br><br>
          <strong>Resume</strong><span style="padding-left: 32px"></span><%= f.resume  %><span style="padding-left: 10px"></span><br><br><br>
        </div>

    <% end %>

    <p><strong><%= QUESTION_FIVE %></strong><br>
      <%= @acc_application.appform_field_5 %></p>
    <p><strong><%= QUESTION_SIX %></strong><br>
      <%= @acc_application.appform_field_6 %></p>
    <p><strong><%= QUESTION_SEVEN %></strong><br>
      <%= @acc_application.appform_field_7 %></p>
    <p><strong><%= QUESTION_EIGHT %></strong><br>
