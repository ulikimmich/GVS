<%= render 'layouts/btn_editing' %>

<div class="row well" xmlns="http://www.w3.org/1999/html">
  <div class="col-sm-8 col-md-8">
  <% if current_user.admin? %>
    <h1>
      <%
         status = @acc_application.status
         case status
           when "new"
      %>
          <h1 style="background-color: #5165E8; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">New</h1>
      <% when "consider" %>
          <h1 style="background-color: #FF6A19; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Consider</h1>
      <% when "recommend" %>
          <h1 style="background-color: #F7CB2A; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Recommend</h1>
      <% when "pass" %>
          <h1 style="background-color: #30BA40; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Pass</h1>
      <% when "incomplete" %>
          <h1 style="background-color: #DE1D10; color: white; font-weight: bold; text-align: center;vertical-align: middle; padding-bottom: 8px">Incomplete</h1>
      <% end %>
    </h1>
  <% end %>
    <h2><%= @acc_application.appform_field_1 %><br><small>Date submitted: <%= @acc_application.created_at.to_date %></small></h2><br>
    <p><strong><%= QUESTION_ONE %></strong><br>
      <%= @acc_application.appform_field_1 %></p>
    <p><strong><%= QUESTION_TWO %></strong><br>
      <%= @acc_application.appform_field_2 %></p>
    <p><strong><%= QUESTION_THREE %></strong><br>
      <%= @acc_application.appform_field_3 %></p>
    <p><strong><%= QUESTION_FOUR %></strong><br>
      <%= link_to @acc_application.appform_field_4, @acc_application.appform_field_4, html_options = { target: "_blank"} %></p>

    <p><strong><%= QUESTION_FIVE %></strong><br>
      <%= @acc_application.appform_field_5 %></p>
    <p><strong><%= QUESTION_SIX %></strong><br>
      <%= @acc_application.appform_field_6 %></p>
    <p><strong><%= QUESTION_SEVEN %></strong><br>
      <%= @acc_application.appform_field_7 %></p>
    <p><strong><%= QUESTION_EIGHT %></strong><br>
      <%= @acc_application.appform_field_8 %></p>
    <p><strong><%= QUESTION_NINE %></strong><br>
      <%= @acc_application.appform_field_9 %></p>
    <p><strong><%= QUESTION_TEN %></strong><br>
      <%= @acc_application.appform_field_10 %></p>
    <p><strong><%= QUESTION_ELEVEN %></strong><br>
      <%= @acc_application.appform_field_11 %></p>
    <p><strong><%= QUESTION_TWELVE %></strong><br>
      <%= @acc_application.appform_field_12 %></p>
    <p><strong><%= QUESTION_THIRTEEN %></strong><br>
      <%= @acc_application.appform_field_13 %></p>
    <p><strong><%= QUESTION_FOURTEEN %></strong><br>
      <%= @acc_application.appform_field_14 %></p>
    <p><strong><%= QUESTION_FIFTEEN %></strong><br>
      <%= @acc_application.appform_field_15 %></p>
    <p><strong><%= QUESTION_SIXTEEN %></strong><br>
      <%= @acc_application.appform_field_16 %></p>
    <p><strong><%= QUESTION_SEVENTEEN %></strong><br>
      <%= @acc_application.appform_field_17 %></p>
    <p><strong><%= QUESTION_EIGHTEEN %></strong><br>
      <%= @acc_application.appform_field_18 %></p>
    <br>
  </div>

  <!-- only show comments when user is admin -->
    <% if current_user.admin? %>
      <div class="col-sm-4 col-md-4 sidebar">
        <h3>Contact info </h3>
        Name: <%= @acc_application.user.name %><br>
        Email: <%= @acc_application.user.email %><br>
        <div><hr></div>
        <div id="disqus_thread" style="margin-top: 50px"></div>
        <script type="text/javascript">
            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
            var disqus_shortname = 'globalvirtualstudio'; // required: replace example with your forum shortname

            /* * * DON'T EDIT BELOW THIS LINE * * */
