<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("logo.png", class: "logo"), root_path %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="<%= current_page?(root_path) ? "active" : "" %>"><%=  link_to "Home", root_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Services <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li class="<%= current_page?(concept_path) ? "active" : "" %>"><%=  link_to "Concept Art", concept_path %></li>
            <li class="<%= current_page?(previz_path) ? "active" : "" %>"><%=  link_to "Previsualization", previz_path %></li>
            <li class="<%= current_page?(vfx_path) ? "active" : "" %>"><%=  link_to "VFX & Animation", vfx_path %></li>
            <li class="<%= current_page?(character_path) ? "active" : "" %>"><%=  link_to "Character Dev.", character_path %></li>
            <li class="<%= current_page?(storyboard_path) ? "active" : "" %>"><%=  link_to "Storyboard", storyboard_path %></li>
