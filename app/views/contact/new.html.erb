<% provide(:title, 'Contact us') %>

<h1>Contact Us</h1>


    <div class="row" id="rowspacer">
      <div class="col-lg-5">

        <%= form_for @message, :url => contact_path do |f| %>

            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, :class => "form-control", :placeholder => "Enter full name" %>

            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, :class => "form-control", :placeholder => "Enter email" %>
            </div>
            <div class="form-group">
              <%= f.label :Message %>
              <%= f.text_area :body, rows: 10, :class => "form-control", :placeholder => "" %>
            </div>

            <%= f.submit "Send", class: "btn btn-large btn-success" %>
        <% end %>

      </div>
    </div>
